<%= form_for @company do |f| %>
<%= f.label :name, 'Nome' %>
<%= f.text_field :name %>
<%= f.label :location, 'Localização' %>
<%= f.text_field :location %>
<%= f.label :email, 'Email' %>
<%= f.text_field :email %>
<%= f.label :phone, 'Telefone' %>
<%= f.text_area :phone %>

<%= f.submit button_label %>
<% end %>
